[user]
  name = David Smith
  email = codeactual@gmail.com
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = true
[github]
  user = codeactual
[branch]
	autosetuprebase = always
[branch "master"]
	rebase = true
[rebase]
	stat = true
  autostash = true
[push]
	default = tracking
  followTags = true
[merge]
	ff = false
  renamelimit = 10000
  conflictstyle = diff3
[clean]
  requireForce = true
[alias]
  checkpoint = git stash; git stash apply
    # https://stackoverflow.com/questions/1527234/finding-a-branch-point-with-git
  oldest-ancestor = !zsh -c 'diff --old-line-format='' --new-line-format='' <(git rev-list --first-parent "${1:-master}") <(git rev-list --first-parent "${2:-HEAD}") | head -1' -
  fpush = git push --force-with-lease
  stash-all = stash save --include-untracked
  home = rev-parse --show-toplevel
[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
[transfer]
  fsckobjects = true
[fetch]
  fsckobjects = true
[receive]
  fsckObjects = true
[diff]
  algorithm = patience
[stash]
  showPatch = true
[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
[remote]
  # https://stackoverflow.com/questions/15507264/can-i-specify-in-git-config-to-fetch-multiple-refspecs
  fetch = +refs/pull/*/head:refs/remotes/origin/pr/*
